<idea-plugin>
    <id>com.lowjungxuan.proz</id>
    <name>ProZ</name>
    <vendor email="lowjungxuan@gmail.com.com" url="https://www.linkedin.com/in/low-jung-xuan-442b32222/">Low Jung Xuan
    </vendor>
    <description>This plugin is helping VeecoTech Developer increase performance</description>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>Dart</depends>
    <depends>io.flutter</depends>
    <change-notes>
        Initial Upload
    </change-notes>
    <!-- Code Inspection Component  -->
    <extensions defaultExtensionNs="com.intellij">

        <externalAnnotator
                language="yaml"
                implementationClass="com.lowjungxuan.proz.versionchecker.annotator.PubPackagesAnnotator"/>
    </extensions>

    <!-- Settings -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.lowjungxuan.proz.versionchecker.settings.AppSettingsState"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="com.lowjungxuan.proz.versionchecker.settings.AppSettingsConfigurable"
                id="com.lowjungxuan.proz.versionchecker.settings.AppSettingsConfigurable"
                displayName="ProZ Setting"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="liveTemplates/GetX.xml"/>
        <liveTemplateContext id="FLUTTER" implementation="com.lowjungxuan.proz.FlutterLiveTemplateContext"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="liveTemplates/Bloc.xml"/>
        <liveTemplateContext id="FLUTTER" implementation="com.lowjungxuan.proz.FlutterLiveTemplateContext"/>
    </extensions>
    <actions>
        <action
                id="ProZ.GetX"
                class="com.lowjungxuan.proz.newFolder.NewFolderCreator"
                text="GetX Bloc"
                description="Create a new folder and Dart files."
                icon="com.lowjungxuan.proz.MyIcons.GetX"
        >
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
    <actions>
        <!-- Add your actions here -->
        <action id="com.lowjungxuan.proz.jsontodart.DartJsonGenerateAction" class="com.lowjungxuan.proz.jsontodart.DartJsonGenerateAction" text="Dart Class from JSON">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta N"/>
        </action>

        <action id="DartJsonGenerator"
                class="com.lowjungxuan.proz.jsontodart.DartJsonNewFileAction"
                text="Dart Class from JSON"
                icon="com.lowjungxuan.proz.MyIcons.GetX">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>

        </action>
    </actions>
</idea-plugin>